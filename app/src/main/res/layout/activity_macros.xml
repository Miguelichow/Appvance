<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Macros"
    android:background="@color/fondo"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="100dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_protein"
            android:drawablePadding="10dp"
            android:drawableTint="#EF7030"
            android:text="ProteÃ­nas:"
            android:textColor="@color/white_pressed"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/tvP"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textColor="@color/orange"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="260dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_fats"
            android:drawablePadding="10dp"
            android:drawableTint="#EF7030"
            android:text="Grasas:"
            android:textColor="@color/white_pressed"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/tvG"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textColor="@color/orange"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="410dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_carbs"
            android:drawablePadding="10dp"
            android:drawableTint="#EF7030"
            android:text="Carbohidratos:"
            android:textColor="@color/white_pressed"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/tvCH"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textColor="@color/orange"
            android:textSize="20dp" />
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|right"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/orange"
        android:onClick="onClick"
        app:borderWidth="0dp"
        app:srcCompat="@drawable/ic_food"
        android:tint="@color/white_pressed"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="540dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/text_explanation2"
            android:textColor="@color/white_pressed"
            android:textSize="20dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/orange"/>
</RelativeLayout>